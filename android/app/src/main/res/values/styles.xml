<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Adds the splash screen definition -->
    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="locationName">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primaryBlue</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="locationRegion">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primaryBlue</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="time">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textColor">@color/primaryBlue</item>
    </style>

    <style name="temperature">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/primaryBlue</item>
    </style>

    <style name="temperatureSmall">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textColor">@color/primaryBlue</item>
    </style>

    <style name="temperatureUnit">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">@color/primaryBlue</item>
    </style>

    <style name="crisis">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">#D0021B</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="errorHeader">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryBlue</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="errorBody">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/primaryBlue</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="verticalLine">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:background">#D8E7F2</item>
    </style>

    <style name="currentWeatherTime">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primaryBlue</item>
    </style>

    <style name="updateTime">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryBlue</item>
    </style>

    <style name="configHeader">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="configBody">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="windIntensity">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
