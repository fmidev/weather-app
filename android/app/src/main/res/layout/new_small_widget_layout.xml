<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/locationNameTextView"
        style="@style/locationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxWidth="141dp"
        tools:text="Helsinki," />

    <TextView
        android:id="@+id/locationRegionTextView"
        style="@style/locationRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxWidth="141dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        tools:text="Suomi" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weatherIconImageView"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginEnd="7dp"
            android:contentDescription="TODO"
            tools:src="@drawable/s32_light" />

        <TextView
            android:id="@+id/temperatureTextView"
            style="@style/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:text="+12" />

        <TextView
            android:id="@+id/temperatureUnitTextView"
            style="@style/temperatureUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            tools:text="°C" />

    </LinearLayout>

    <ImageView
        android:id="@+id/fmiLogoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/fmi_logo_short"
        android:visibility="gone" />

    <TextView
        android:id="@+id/warningTextView"
        style="@style/warning"
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:layout_marginTop="13dp"
        android:visibility="gone"
        tools:text="°2.11. klo 23: Itämeren rannikko: Sää kehitty..."
        tools:visibility="visible" />

    <TextView
        android:id="@+id/updateTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:visibility="visible"
        tools:text="11.34.24" />

</LinearLayout>