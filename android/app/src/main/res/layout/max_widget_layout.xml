<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/normalLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/locationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/locationNameTextView"
                style="@style/locationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                tools:text="Helsinki," />

            <TextView
                android:id="@+id/locationRegionTextView"
                style="@style/locationRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                tools:text="Suomi" />

        </LinearLayout>

        <TextView
            android:id="@+id/timeTextView"
            style="@style/currentWeatherTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            tools:text="klo 11:00" />

        <LinearLayout
            android:id="@+id/weatherLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/weatherIconImageView"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginEnd="18dp"
                android:contentDescription="TODO"
                tools:src="@drawable/s32_light" />

            <TextView
                android:id="@+id/temperatureTextView"
                style="@style/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="+12" />

            <TextView
                android:id="@+id/temperatureUnitTextView"
                style="@style/temperatureUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                tools:text="°C" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/hourForecastRowLayout"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:background="#F6F6F7"
                android:importantForAccessibility="no" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:background="#F6F6F7"
                android:importantForAccessibility="no" />

            <RelativeLayout
                android:id="@+id/weatherIconsLayout"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="13dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/clockIconImageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_clock" />

                <ImageView
                    android:id="@id/weatherIconImageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/clockIconImageView"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_weather" />

                <ImageView
                    android:id="@+id/temperatureIconImageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/ic_temperature" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/weatherLayout0"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/weatherIconsLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timeTextView0"
                    style="@style/time"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@id/weatherIconImageView0"
                    android:layout_alignEnd="@id/weatherIconImageView0"
                    android:gravity="center"
                    tools:text="13:00" />

                <ImageView
                    android:id="@+id/weatherIconImageView0"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_above="@id/temperatureTextView0"
                    android:layout_below="@id/timeTextView0"
                    android:layout_gravity="center"
                    android:contentDescription="TODO"
                    tools:src="@drawable/s32_light" />

                <TextView
                    android:id="@+id/temperatureTextView0"
                    style="@style/temperatureSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@id/weatherIconImageView0"
                    android:layout_alignEnd="@id/weatherIconImageView0"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    tools:text="+12°" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/weatherLayout1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/weatherLayout0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timeTextView1"
                    style="@style/time"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@id/weatherIconImageView1"
                    android:layout_alignEnd="@id/weatherIconImageView1"
                    android:gravity="center"
                    tools:text="13:00" />

                <ImageView
                    android:id="@+id/weatherIconImageView1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_above="@id/temperatureTextView1"
                    android:layout_below="@id/timeTextView1"
                    android:layout_gravity="center"
                    android:contentDescription="TODO"
                    tools:src="@drawable/s32_light" />

                <TextView
                    android:id="@+id/temperatureTextView1"
                    style="@style/temperatureSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@id/weatherIconImageView1"
                    android:layout_alignEnd="@id/weatherIconImageView1"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    tools:text="+12°" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/weatherLayout2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/weatherLayout1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timeTextView2"
                    style="@style/time"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@id/weatherIconImageView2"
                    android:layout_alignEnd="@id/weatherIconImageView2"
                    android:gravity="center"
                    tools:text="13:00" />

                <ImageView
                    android:id="@+id/weatherIconImageView2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_above="@id/temperatureTextView2"
                    android:layout_below="@id/timeTextView2"
                    android:layout_gravity="center"
                    android:contentDescription="TODO"
                    tools:src="@drawable/s32_light" />

                <TextView
                    android:id="@+id/temperatureTextView2"
                    style="@style/temperatureSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@id/weatherIconImageView2"
                    android:layout_alignEnd="@id/weatherIconImageView2"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    tools:text="+12°" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/weatherLayout3"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/weatherLayout2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timeTextView3"
                    style="@style/time"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@id/weatherIconImageView3"
                    android:layout_alignEnd="@id/weatherIconImageView3"
                    android:gravity="center"
                    tools:text="13:00" />

                <ImageView
                    android:id="@+id/weatherIconImageView3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_above="@id/temperatureTextView3"
                    android:layout_below="@id/timeTextView3"
                    android:layout_gravity="center"
                    android:contentDescription="TODO"
                    tools:src="@drawable/s32_light" />

                <TextView
                    android:id="@+id/temperatureTextView3"
                    style="@style/temperatureSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@id/weatherIconImageView3"
                    android:layout_alignEnd="@id/weatherIconImageView3"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    tools:text="+12°" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/weatherLayout4"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/weatherLayout3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timeTextView4"
                    style="@style/time"
                    android:background="#F6F6F7"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@id/weatherIconImageView4"
                    android:layout_alignEnd="@id/weatherIconImageView4"
                    android:gravity="center"
                    tools:text="13:00" />

                <ImageView
                    android:id="@+id/weatherIconImageView4"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_above="@id/temperatureTextView4"
                    android:layout_below="@id/timeTextView4"
                    android:layout_gravity="center"
                    android:contentDescription="TODO"
                    tools:src="@drawable/s32_light" />

                <TextView
                    android:id="@+id/temperatureTextView4"
                    style="@style/temperatureSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignStart="@id/weatherIconImageView4"
                    android:layout_alignEnd="@id/weatherIconImageView4"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:background="#F6F6F7"
                    tools:text="+12°" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/crisisTextView"
            style="@style/crisis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="6dp"
            android:paddingTop="0dp"
            android:paddingEnd="6dp"
            android:paddingBottom="0dp"
            android:visibility="gone"
            tools:text="Viranomaistiedote: 13.11.2024 klo: 11.00: Alueella Lauttasaaren ranni..."
            tools:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="56dp"
                android:layout_height="27dp"
                android:layout_alignParentStart="true"
                android:contentDescription="TODO"
                tools:src="@drawable/fmi_logo_short" />

            <TextView
                android:id="@+id/updateTimeTextView"
                style="@style/updateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/logoImageView"
                android:layout_alignBottom="@id/logoImageView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                tools:ignore="SmallSp"
                tools:text="Päivitetty klo 11:00" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/errorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:id="@+id/errorHeaderTextView"
            style="@style/errorHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            tools:text="Could not update weather data" />

        <TextView
            android:id="@+id/errorBodyTextView"
            style="@style/errorBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            tools:text="Please check your internet connection." />

    </LinearLayout>

</LinearLayout>