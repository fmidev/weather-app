{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["DOM", "ES2022"],
    "moduleResolution": "node",
    "noEmit": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["jest"],
    "baseUrl": ".",
    "paths": {
      "react": [ "./node_modules/@types/react" ],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@navigators/*": ["./src/navigators/*"],
      "@network/*": ["./src/network/*"],
      "@screens/*": ["./src/screens/*"],
      "@store/*": ["./src/store/*"],
      "@utils/*": ["./src/utils/*"],
      "@config": ["./src/config"],
      "@i18n": ["./i18n"]
    }
  },
  "exclude": [
    "node_modules",
    "e2e",
    "**/Pods"
  ]
}
